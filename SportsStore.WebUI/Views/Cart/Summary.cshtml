@model SportsStore.Domain.Entities.Cart

<div class="float-right mx-3 d-none d-sm-block">
    <div class="navbar-text">
        <b>Your Cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </div>
    @Html.ActionLink("Summary","Index","Cart",
    new { returnUrl = Request.Url.PathAndQuery},
    new { @class = "btn btn-secondary"})
</div>

<div class="float-right d-block d-sm-none">
    <div class="navbar-text">
        <b class="d-none d-sm-block">Your Cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </div>
    <a href=@Url.Action("Index","Cart",new { returnUrl = Request.Url.PathAndQuery}) class="btn btn-secondary justify-content-center">
        <i class="fas fa-shopping-cart"></i>
    </a>
</div>





