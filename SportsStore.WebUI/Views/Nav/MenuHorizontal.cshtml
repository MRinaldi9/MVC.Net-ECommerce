@model IEnumerable<string>

<div class="d-flex btn-group btn-group-sm justify-content-center">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-sm " + (ViewBag.SelectedCategory == null ? " btn-info" : " btn-secondary") })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new { controller = "Product", action = "List", category = link, page = 1 },
                        new { @class = "btn btn-secondary btn-sm" + (link == ViewBag.SelectedCategory ? " btn-info" : "")})
    }
</div>
