@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block" + (ViewBag.SelectedCategory == null ? " btn-info" : " btn-secondary") })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1}, new {
            @class = "btn btn-block btn-secondary " + (link == ViewBag.SelectedCategory ? "btn-info" : "" )})
}