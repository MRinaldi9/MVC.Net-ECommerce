<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<link href="~/Content/bootstrap.css" rel="stylesheet" />-->
    <link href="~/Content/bootstrap-united.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link rel="shortcut icon" href="#" />
    <script src="https://kit.fontawesome.com/be299d0f57.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    <style>
        .navbar-text {
            color: black !important;
        }
    </style>
    <div class="navbar navbar-dark bg-primary" role="navigation">
        <a class="navbar-brand" href="#">
            <span class="d-none d-sm-block">SPORTS STORE</span>
            <div class="d-block d-sm-none">SPORTS</div>
            <div class="d-block d-sm-none">STORE</div>
        </a>
        @Html.Action("Summary", "Cart")
    </div>

    <div class="d-block d-sm-none">
        @Html.Action("Menu", "Nav", new { horizontalLayout = true })
    </div>

    <div class="row">
        <div id="categories" class="col-sm-3 d-none d-sm-block">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-sm-8">
            @RenderBody()
        </div>
    </div>

</body>
</html>